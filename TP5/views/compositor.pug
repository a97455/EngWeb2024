extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2= compositor.nome

        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
                li 
                    b Nome: 
                    | #{compositor.nome}
                li 
                    b Bio: 
                    |#{compositor.bio}
                li 
                    b Data de Nascimento: 
                    |#{compositor.dataNasc}
                li 
                    b Data de Obito: 
                    |#{compositor.dataNasc}
                li 
                    b Periodo: 
                    |#{periodo.name}

        footer.w3-container.w3-teal
            h5 Generated by EngWeb2024 in #{data} - 
                a(href='/compositores') Return